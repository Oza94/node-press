
extends ../layout/page-layout

block content
  unless article
    h1 new article
  else
    h1 edit article
  form(method="POST", action="/article/edit")
    if article
      input(type="hidden", name="_id", value="#{article._id}")
    input(placeholder="title", name="title", value="#{article ? article.title : ''}")
    br
    label
      if article && article.published
        input(type="checkbox", name="published", checked)
      else
        input(type="checkbox", name="published")
      | published
    br
    textarea(placeholder="Content here...", name="content") #{article ? article.content : ''}
    br
    input(type="submit", value="submit")