
extends ../layout/page-layout

block content
  a(href="/") < back to list
  if req.isAuthenticated()
    span -
    a(href="/article/edit/#{article.slug}") edit
  h1
    | #{article.title}
    small
      if article.author.id
        span &nbsp;by&nbsp;
        b #{article.author.username}
      span &nbsp;#{moment(article.pusblishAt).fromNow()}
  p !{article.compiled}
